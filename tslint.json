{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "no-console": false,
    "no-namespace": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      false
    ],
    "allowSyntheticDefaultImports": false,
    "no-consecutive-blank-lines": [true, 2],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-separator",
      "check-rest-spread",
      "check-type-operator"
    ],
    "semicolon": [false],
    "only-arrow-functions": false,
    "array-type": [true, "array"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "functions": "ignore"
        }
      }
    ],
    "ordered-imports": [
      false
    ],
    "no-trailing-whitespace": [true, "ignore-blank-lines"],
    "no-shadowed-variable": [false],
    "no-angle-bracket-type-assertion": false,

    "jsx-no-multiline-js": [false],
    "jsx-no-lambda": [false]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "**/*.js"
    ]
  }
}
